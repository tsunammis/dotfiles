#!/usr/bin/env bash
# Inspired from https://github.com/helmuthdu/dotfiles/blob/master/.bashrc

# Modified commands
alias ..='cd ..'
alias df='df -h'
alias du='du -c -h'
alias mkdir='mkdir -p -v'
alias more='less'
alias ping='ping -c 5'

# ls
alias lr='ls -R'               # recursive ls                    
alias ll='ls -alrt'
alias la='ll -A'
alias lm='la | less'
